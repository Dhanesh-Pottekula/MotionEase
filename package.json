{
  "name": "sick-stop",
  "description": "say Bye-Bye to your motion sickness and enjoy your travel",
  "version": "0.1.0",
  "author": "Dhanesh Uzumaki",
  "private": true,
  "main": "public/electron.js",
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@tensorflow-models/pose-detection": "^2.1.3",
    "@tensorflow/tfjs": "^4.22.0",
    "concurrently": "^9.1.0",
    "cra-template": "1.2.0",
    "path-browserify": "^1.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",

    "wait-on": "^8.0.1",
    "web-vitals": "^4.2.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "react-start": "craco start",
    "electron": "concurrently \"BROWSER=none npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "electron-builder",
    "test": "craco test",
    "eject": "craco eject",
    "app:dir": "electron-builder --dir",
    "app:dist": "electron-builder",
    "preelectron-pack": "npm run-script build",
    "electron-pack": "build --em.main=public/electron.js"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1"
  },
  "build": {
    "extends": null,
    "appId": "com.motion-sick.id",
    "files": [
      "dist/**/*",
      "package.json",
      "public/electron.js"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "category": "health",
      "icon": "build/icon.png"
    },
    "win": {
      "icon": "build/icon.png"
    },
    "linux": {
      "icon": "build/icon.png"
    },
    "extraMetadata": {
      "main": "public/electron.js"
    }
  }
}
